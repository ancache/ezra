$(document).ready ->
	count = 1
	$('#add-new').click ->
		count++
		$('#feature-list').append('<input type="text" value="" name="feature[fvalues][]" placeholder="Add feature" data-count="'+count+'" /><br/>')

	# Edit features
	$('#edit-box').hide()
	$('#edit-feature-alert').alert()
	$('.yes').click ->
		$('#edit-feature-alert').alert('close')
		$('#edit-box').show()