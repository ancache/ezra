<% provide(:title, "New feature") %>
<h1>Features#new</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@feature) do |f| %>
      <%= render 'error_messages' %>

      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>

      <%= f.label :instructions, "Instructions" %>
      <%= f.text_area :instructions %>

      <%= f.select(:ftype, options_for_select([['Single',0],['Multiple',1],['Text',2]])) %>
      Choose default:
      <div id="ftype-1">
        <%= f.select(:fvalues, options_for_select([['True',1],['False',0]])) %>
      </div>

      <div id="ftype-2">
        <% ['A','B','C'].each do |feature| %>
          <br><%= check_box_tag 'features[]',feature,(params[:fvalues] || {}).include?(feature) %>
          <%= feature.humanize %>
        <% end %>
      </div>

      <div id="ftype-3" style="display: none">

      </div>      
      <%= f.submit "Create feature", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
