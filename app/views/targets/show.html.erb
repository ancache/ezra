<% provide(:title, 'Target | ' + @target.phrase) %>
  <h2><%= @target.phrase %></h2>
  Total: <%= @hits.count %> <br/>
  Confirmed: <span class="confirmed"> <%= @hits.where(:confirmed => 1).count %> </span> <br/>
  Unconfirmed: <span class="unconfirmed"> <%= @hits.where(:confirmed => 0).count %> </span> <br/>
  Not Present: <span class="not-present"> <%= @hits.where(:confirmed => -1).count %> </span>
  <h3>Features </h3>
  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Created by</th>
      <th>Number of targets</th>
      <th>Instructions</th>
    </thead>
    <%= render @features %>
  </table>
  <h3>Hits</h3>
  <%= will_paginate @hits %>
  <table class="table table-striped">
    <%= render @hits %>
  </table>
  <%= will_paginate @hits %>
<br />

